@page
@model UnictiveTest.Pages.Users.IndexModel
@{
    ViewData["Title"] = "Users";
    var counter = 1;
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h3>Users</h3>
    <form method="post" asp-page="/Account/Logout">
        <button type="submit" class="btn btn-outline-light btn-sm">Logout</button>
    </form>
    <a asp-page="Create" class="btn btn-success">Create User</a>
</div>
<table class="table table-striped table-bordered bg-white shadow-sm">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Email</th>
            <th>Hobbies</th>
            <th style="width:180px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Users.Count; i++)
        {
            var u = Model.Users[i];
            <tr>
                <td>@(i + 1)</td>
                <td>@u.Name</td>
                <td>@u.Email</td>
                <td>@string.Join(", ", u.Hobbies.Select(h => h.Name))</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-page="Edit" asp-route-id="@u.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-page="Delete" asp-route-id="@u.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

